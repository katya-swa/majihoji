<div class="comments">
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <%= link_to "#{comment.user.name}さん", user_path(comment.user) %>
      <p><%= comment.content %></p>
      <% if comment.user == current_user %>
        <%= link_to 'コメントを削除する', item_comment_path(comment.item, comment), method: :delete, remote: true %>
      <% end %>
    <% end %>
  <% end %>
</div>