<div class="container">
  <div class="user_info">
    <h3><%= @user.name %></h3>
        <div class="circle-avatar">
          <% if current_user.persisted? && current_user.avatar? %>
            <%= image_tag current_user.avatar %>
          <% else %>
            <%= image_tag 'no_avatar.png' %>
          <% end %>
        </div>
    <% if @user == current_user %>
        <%= button_to '編集',edit_user_registration_path , method: :get, :class => "btn btn-primary" %>
        <%= button_to '投稿する',root_path , method: :get, :class => "btn btn-primary" %>
      <% end %>
      <% if current_user.try(:admin?) %>
        <%= button_to '管理画面', rails_admin_path  , method: :get, :class => "btn btn-primary" %>
      <% end %>
  </div>

  <br>
  <br>

  <% if @user.items.any? %>
    <div class="row">
      <ol class="items">
        <% @user.items.each do |item| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <%= render item %>
            </div>
          </div>
        <% end %>
      </ol>
    </div>
    <%= paginate @items %>
  <% end %>
</div>
