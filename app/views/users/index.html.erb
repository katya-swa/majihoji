<h1>全てのユーザー</h1>


<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin?  %>
        | <%= link_to "delete", user, method: :delete,
                      data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
